h1
  color white
  cursor pointer
  font-family 'Lato', sans-serif
  font-size 1.4rem
  font-weight 400
  left 1%
  opacity 1
  position absolute
  bottom 30px
  transition opacity 0.5s ease
.links
  bottom 10px
  color white
  font-family 'Lato', sans-serif
  font-size 1rem
  font-weight 400
  left 1%
  position absolute
  a
    color white
    opacity 0.7
    text-decoration none
    &:hover
      opacity 1
nav
  color white
  font-family 'Lato', sans-serif
  font-size 1rem
  font-weight 400
  &.active
    h2:before
      left 100%
  h2
    display inline-block
    font-size 1.3rem
    font-weight 700
    padding-bottom 20px
    position relative
    overflow hidden
    &:before
      background white
      top 20px
      content ''
      height 2px
      left -100%
      position absolute
      width 30px
      transition all 0.5s ease
  ul
    margin 0
    padding 0
    li
      cursor pointer
      display inline-block
      list-style none
      margin-bottom 25px
      //height 70px
      opacity 0
      position relative
      transition all 0.4s ease
      span
        display block
        color black
        position relative
        z-index 1
    li:after
      background white
      top 13px
      content ''
      display block
      height 2px
      position absolute
      width 0%
      transition all 0.25s ease
      z-index 0
    li.width:after
      width 100%
  ul.active
    li
      opacity 1


.project-list
  height auto
  left 20px
  position absolute
  top 20px
  transition all 0.4s ease
  z-index 0

.experiment-list
  height auto
  position absolute
  right 20px
  text-align right
  top 20px
  z-index 0
.project-container
  width 150px
.description-container
  color white
  font-family 'Lato', sans-serif
  font-size 1.5rem
  font-weight 700
  left 65%
  overflow hidden
  padding-left 15px
  position absolute
  top 65%
  width 235px
  transition opacity 0.5s ease
  &.active
    h2, p, span, a
      left 0%
      opacity 1
  h2
    left -100%
    margin 0
    opacity 0
    position relative
    text-transform uppercase
    transition all 0.2s ease
  p, span
    color white
    left -100%
    margin 0
    opacity 0
    position relative
    font-size 1.2rem
    transition all 0.6s ease
  p
    margin 10px 0
    transition all 0.4s ease
  span:after
    content '  â€¢  '
    font-size 1rem
  span.last:after
    content ''
  a
    background white
    color black
    display inline-block
    font-family 'Lato', sans-serif
    font-size 1.2rem
    font-weight 400
    left -100%
    margin 10px 0 8px 0
    opacity 0
    padding 5px 5px
    position relative
    text-align center
    text-decoration none
    text-transform uppercase
    transition all 0.8s ease
    &:before
      content ' '
      background #000;
      position absolute
      left 0
      top 3px
      height 1px
      width 0px
      transition all 0.5s ease
    &:hover:before
      position absolute
      left 10%
      width 80%
    &:after
      content ' '
      background #000;
      position absolute
      right 0
      bottom 3px
      height 1px
      width 0px
      transition all 0.5s ease
    &:hover:after
      position absolute
      right 10%
      width 80%
  &:before
    content ''
    background #fff;
    position absolute
    left 0
    top 0
    height 0%
    width 3px
    transition all 0.3s ease
  &.active:before
    height 100%
.experiment-description
  right 20px
.loader
  display none
.loader.active
  display block
  height 5px
  left 50%
  overflow hidden
  position absolute
  top 50%
  transform translate3d(-50%, -50%, 0)
  width 80px
  &::before
    animation loader 0.5s infinite
    background white
    content ''
    height 100%
    left -110%
    position absolute
    top 0
    width 100%

@keyframes loader
  0% { left: -110% }
  50% { left: 110% }
  100% { left:-110% }

@media screen and (max-width: 640px)
  h1
    bottom 30px
    font-size 1rem
    left 2%
    margin 0
  .links
    bottom 10px
    font-size 0.9rem
    left 2%
    margin 0
  nav
    h2
      font-size 1rem
      padding-bottom 10px !important
    li
      font-size 0.8rem
      margin-bottom 15px !important
  .description-container
    left 42%
    padding 0 5px 0 15px
    top 58%
    width 48%
    &.active:before
      background rgba(255, 255, 255, 0.7)
      width 100%
    h2
      color #000
      font-size 1rem
      margin-top 8px
    p, span, a
      color #000
      font-size 0.8rem
    a
      color #fff
      background #000
    a:before
      background #fff
    a:before
      background #fff
